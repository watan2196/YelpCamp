<% include ../partials/header %>
<div class="container">
    <div class"row">
        <h1 style="text-align: center;">Add new comments to <%= campground.name %> </h1>
        <!--The method here we used is post so it will look for the address named /campgrounds-->
        <!--acepting a post request-->
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments/new" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn-primary btn-block btn btn-lg btn-default">Submit!</button>       
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        <br>
    </div>
</div>
<% include ../partials/footer %>